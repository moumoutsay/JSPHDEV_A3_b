<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Patrick Star"
        android:id="@+id/textName"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BD: February 26 ,1986"
        android:id="@+id/textBD"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone # (650) 999-9999"
        android:id="@+id/textPhone"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home page"
        android:id="@+id/textHomePage"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mail: moumoutsay@gmail.com"
        android:id="@+id/textMail"
        android:padding="5dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageView android:id="@+id/fb_logo"
        android:src="@drawable/facebook_icon"
        android:scaleType="centerInside"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:padding="5dp"
        android:layout_centerVertical="true"/>

        <ImageView android:id="@+id/img_like"
            android:src="@drawable/like"
            android:scaleType="centerInside"
            android:layout_width="80dip"
            android:layout_height="35dip"

            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/text_like_cnt"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />


        <ImageView android:id="@+id/img_dislike"
            android:src="@drawable/dislike"
            android:scaleType="centerInside"
            android:layout_width="80dip"
            android:layout_height="35dip"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/text_dislike_cnt"
            android:padding="5dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</LinearLayout>